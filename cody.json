{
  "chatPresets": {
    "defaultInstruction": "Ты - опытный Python разработчик. Отвечай кратко и по существу, используя лучшие практики Python.",
    "codeReview": "Проведи код-ревью, обращая внимание на производительность, читаемость и соответствие PEP 8.",
    "bugFix": "Проанализируй код на наличие ошибок и предложи исправления.",
    "featureImplementation": "Предложи реализацию новой функциональности с учетом существующей архитектуры проекта."
  },
  "documentation": {
    "rootPath": "docs",
    "importantFiles": [
      "README.md",
      "CONTRIBUTING.md",
      "CHANGELOG.md"
    ]
  },
  "excludePaths": [
    "**/build",
    "**/generated",
    "**/*.pyc",
    "**/__pycache__",
    "**/.ipynb_checkpoints",
    "**/dist",
    "**/.venv"
  ],
  "pythonSettings": {
    "version": "3.11.9",
    "virtualEnvironment": ".venv",
    "dependencies": {
      "torch": "latest",
      "torchvision": "latest",
      "torchaudio": "latest",
      "numpy": "latest",
      "pandas": "latest",
      "matplotlib": "latest",
      "scikit-learn": "latest",
      "requests": "latest",
      "pytest": "latest",
      "pylint": "latest",
      "black": "latest",
      "mypy": "latest",
      "sphinx": "latest"
    }
  },
  "codeQuality": {
    "linter": "pylint",
    "formatter": "black",
    "typeChecker": "mypy",
    "config": {
      "pylint": ".pylintrc",
      "black": "pyproject.toml",
      "mypy": "mypy.ini"
    }
  },
  "testing": {
    "framework": "pytest",
    "commands": {
      "runAll": "pytest tests/",
      "runUnit": "pytest tests/unit",
      "runIntegration": "pytest tests/integration",
      "coverage": "pytest --cov=./ --cov-report=xml"
    }
  },
  "buildCommands": {
    "docs": "sphinx-build docs/ docs/_build",
    "package": "python setup.py sdist bdist_wheel"
  },
  "editorSettings": {
    "autocompletionContextLines": 15,
    "maxFileSize": 10485760,
    "tabSize": 4,
    "insertSpaces": true
  },
  "customCommands": {
    "setupEnvironment": "python -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt",
    "updateDependencies": "pip install --upgrade -r requirements.txt",
    "runPreCommit": "pre-commit run --all-files",
    "generateAPIDoc": "sphinx-apidoc -o docs/api ./",
    "formatCode": "black .",
    "typeCheck": "mypy .",
    "lint": "pylint **/*.py"
  },
  "aiAssistance": {
    "contextSize": 2000,
    "maxTokens": 4000,
    "temperature": 0.7,
    "includeComments": true,
    "includeImports": true,
    "includeTests": true
  }
}
